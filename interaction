<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>
    
    <script>
    var r,g,b
    var x
    var y
    var opacity
        function setup() {
            createCanvas(800,800);
            opacity = 255;
        }

        function draw() {
            r= random(0,255,50)  //color red
            g= random(0,255,50) //color green
            b= random(0,255,50) //color blue
            textSize(24);
            text("THE GAME.", 316,60) //text
        }
        
        function keyPressed(){
            background(mouseX/2,mouseY/2,0) //background changes color when you hit any key
            ellipse(mouseX,mouseY,100,100) // an ellipse is made when you hit a key (too)
        }
        
        function mousePressed() {
            strokeWeight(1) // creates an outline
            stroke(55,213,193); //outline
            fill(r,g,b,opacity - 5); //creates a colors
            ellipse(mouseX,mouseY,10,10) //circle is created when mouse is pressed
        }
        function mouseDragged() {
            strokeWeight(3);
            stroke(0,0,0);
            fill(r,g,b);
            rect(mouseX,mouseY,100,100); //creates a square
            ellipse(mouseX,mouseY,50,50); //creates a small circle
            opacity = opacity - 1
        }
    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/jasonsimon1/p5js/blob/master/interaction.html?footer=0"></script>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>


</html>

